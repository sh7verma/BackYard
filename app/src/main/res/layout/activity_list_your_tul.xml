<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_lp"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <RelativeLayout
        android:id="@+id/rl_main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_buffer"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:id="@+id/ll_heading_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_2sdp"
            android:orientation="vertical">

            <customviews.SemiboldTextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_8"
                android:text="@string/list_your_place"
                android:textAllCaps="true"
                android:textColor="@color/white_color"
                android:textSize="@dimen/_24" />

            <customviews.MediumTextView
                android:id="@+id/tv_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:text="@string/add_basic_details_of_your_space"
                android:textColor="@color/white_color"
                android:textSize="@dimen/_12" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_list_main_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/ll_heading_container"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_dot_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!--<ImageView-->
                    <!--android:id="@+id/img_dot1"-->
                    <!--android:layout_width="20dp"-->
                    <!--android:layout_height="20dp"-->
                    <!--android:layout_gravity="center"-->
                    <!--android:src="@drawable/white_circle" />-->

                    <RelativeLayout
                        android:id="@+id/img_dot1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/white_circle">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:src="@mipmap/ic_tick_lp" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/view_line1"
                        android:layout_width="1dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:background="@color/white_color" />


                    <!--<ImageView-->
                    <!--android:id="@+id/img_dot2"-->
                    <!--android:layout_width="20dp"-->
                    <!--android:layout_height="20dp"-->
                    <!--android:layout_gravity="center"-->
                    <!--android:src="@drawable/white_circle" />-->
                    <RelativeLayout
                        android:id="@+id/img_dot2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/white_circle">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:src="@mipmap/ic_tick_lp" />
                    </RelativeLayout>


                    <View
                        android:id="@+id/view_line2"
                        android:layout_width="1dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:background="@color/white_color" />


                    <RelativeLayout
                        android:id="@+id/img_dot3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/white_circle">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:src="@mipmap/ic_tick_lp" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/view_line3"
                        android:layout_width="1dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:background="@color/white_color" />


                    <RelativeLayout
                        android:id="@+id/img_dot4"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/white_circle">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:src="@mipmap/ic_tick_lp" />
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_list_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_first_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <customviews.BoldTextView
                        android:id="@+id/tv_first"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/list_your_place_"
                        android:textColor="@color/white_color"
                        android:textSize="@dimen/_16" />

                    <ImageView
                        android:id="@+id/img_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:src="@mipmap/ic_arrow_r" />

                </LinearLayout>

                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_grey" />

                <LinearLayout
                    android:id="@+id/ll_second_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <customviews.BoldTextView
                        android:id="@+id/tv_second"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/preferences"
                        android:textColor="@color/white_color"
                        android:textSize="@dimen/_16" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:src="@mipmap/ic_arrow_r" />

                </LinearLayout>

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_grey" />

                <LinearLayout
                    android:id="@+id/ll_third_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <customviews.BoldTextView
                            android:id="@+id/tv_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:text="@string/pricing"
                            android:textColor="@color/white_color"
                            android:textSize="@dimen/_16" />


                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:src="@mipmap/ic_arrow_r" />

                </LinearLayout>

                <View
                    android:id="@+id/viewprice"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_grey" />

                <LinearLayout
                    android:id="@+id/ll_fourth_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <customviews.BoldTextView
                            android:id="@+id/tv_third"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:text="@string/bank_details"
                            android:textColor="@color/white_color"
                            android:textSize="@dimen/_16" />

                        <customviews.RegularTextView
                            android:id="@+id/txt_primary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/primary_account_linked"
                            android:textColor="@color/white_color" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:src="@mipmap/ic_arrow_r" />

                </LinearLayout>

                <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_grey" />


                <!--<LinearLayout-->
                <!--android:id="@+id/ll_buffer"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:orientation="horizontal"-->
                <!--android:layout_gravity="center_vertical"-->
                <!--android:paddingBottom="@dimen/_10sdp"-->
                <!--android:paddingTop="@dimen/_10sdp">-->

                <!--<ImageView-->
                <!--android:id="@+id/img_buffer"-->
                <!--android:layout_width="@dimen/_15sdp"-->
                <!--android:layout_height="@dimen/_15sdp"-->
                <!--android:layout_marginRight="@dimen/_5sdp"-->
                <!--android:src="@drawable/checkbox_unchecked" />-->

                <!--<customviews.MediumTextView-->
                <!--android:id="@+id/tv_buffer"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:maxLines="3"-->
                <!--android:text="bufferStatusffer time for your Space."-->
                <!--android:textColor="@color/white_color"-->
                <!--android:textSize="@dimen/_12" />-->

                <!--</LinearLayout>-->

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_buffer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bt_done"
        android:orientation="horizontal"
        android:visibility="gone"
        android:paddingBottom="@dimen/_10sdp"
        android:paddingTop="@dimen/_10sdp">

        <View
            android:id="@+id/view_buffer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/ll_buffer_selection"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/_5sdp"
            android:background="@drawable/checkbox_unchecked_white"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/_2sdp">

            <ImageView
                android:id="@+id/img_buffer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/ic_tick_lp" />

        </LinearLayout>

        <customviews.SemiboldTextView
            android:id="@+id/tv_buffer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:maxLines="3"
            android:text="@string/tick_this_box_only_when_requeste"
            android:textColor="@color/white_color"
            android:textSize="@dimen/_12" />

    </LinearLayout>


    <Button
        android:id="@+id/bt_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/white_ripple"
        android:text="@string/done"
        android:textAllCaps="true"
        android:textColor="@color/colorSecondryGradient"
        android:visibility="invisible" />
</RelativeLayout>
