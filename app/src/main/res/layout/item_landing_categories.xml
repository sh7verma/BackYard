<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_content"
    android:layout_width="160dp"
    android:background="@color/transperent2"
    android:layout_height="160dp"
    android:layout_marginRight="@dimen/_8"
    android:elevation="3dp"
    app:cardCornerRadius="@dimen/_5"
    app:cardUseCompatPadding="true">

    <ImageView
        android:id="@+id/img_cat"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="@drawable/gradient_base" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom"
        android:background="@drawable/dropshadow"/>

    <customviews.SemiboldTextView
        android:id="@+id/txt_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:paddingBottom="@dimen/_12sdp"
        android:paddingLeft="@dimen/_12sdp"
        android:paddingRight="@dimen/_12sdp"
        android:text="BackYard"
        android:textAllCaps="true"
        android:textColor="@color/white_color" />

</android.support.v7.widget.CardView>