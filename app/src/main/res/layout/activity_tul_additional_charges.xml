<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color"
    android:orientation="vertical"
    tools:context="com.app.backyard.TulAdditionalChargesActivity">

    <include layout="@layout/toolbar_second" />

    <LinearLayout
        android:id="@+id/ll_hourly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <customviews.MediumTextView
            android:id="@+id/tv_tul_price_per_hour"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/white_ripple"
            android:text="@string/price_per_hour_"
            android:textColor="@color/black_color" />

        <customviews.SemiboldTextView
            android:id="@+id/tv_tul_price_per_hour_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/white_ripple"
            android:text="$ 20"
            android:textAllCaps="true"
            android:textColor="@color/black_color" />
    </LinearLayout>

    <View
        android:id="@+id/view_hour"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/hint_color_dark" />

    <LinearLayout
        android:id="@+id/ll_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <customviews.MediumTextView

            android:id="@+id/tv_tul_price_per_day"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/white_ripple"
            android:text="@string/price_per_day_"
            android:textColor="@color/black_color" />

        <customviews.SemiboldTextView

            android:id="@+id/tv_tul_price_per_day_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/white_ripple"
            android:text="$ 20"
            android:textAllCaps="true"
            android:textColor="@color/black_color" />
    </LinearLayout>

    <View
        android:id="@+id/view_days"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/hint_color_dark" />
    <LinearLayout
        android:id="@+id/ll_your_earning"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <customviews.RegularTextView
            android:id="@+id/tv_your_earning_hint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white_color"
            android:text="Earning"
            android:textColor="@color/black_color" />

        <customviews.SemiboldTextView
            android:id="@+id/tv_your_earning_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white_color"
            android:text="$ 5"
            android:textAllCaps="true"
            android:textColor="@color/black_color" />

        <ImageView
            android:id="@+id/img_earning_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:background="@drawable/white_ripple"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_info" />

    </LinearLayout>

    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="gone"
        android:background="@color/hint_color_dark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <customviews.MediumTextView
            android:id="@+id/tv_tul_security_charges"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/white_ripple"
            android:text="@string/security_deposit_refundable_"
            android:textColor="@color/black_color" />

        <customviews.SemiboldTextView
            android:id="@+id/tv_tul_security_charges_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/white_ripple"
            android:text="$ 20"
            android:textAllCaps="true"
            android:textColor="@color/black_color" />
    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/hint_color_dark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <customviews.MediumTextView
            android:id="@+id/tv_tul_convenience_fee"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white_color"
            android:text="@string/extra_fee_"
            android:textColor="@color/black_color" />

        <customviews.SemiboldTextView
            android:id="@+id/tv_tul_convenience_fee_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white_color"
            android:text="$ 5"
            android:textAllCaps="true"
            android:textColor="@color/black_color" />
    </LinearLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/hint_color_dark" />

    <LinearLayout
        android:id="@+id/ll_extra_earning"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <customviews.RegularTextView
            android:id="@+id/tv_extra_earning_hint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white_color"
            android:text="Extra Earning"
            android:textColor="@color/black_color" />

        <customviews.SemiboldTextView
            android:id="@+id/tv_extra_earning_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white_color"
            android:text="$ 5"
            android:textAllCaps="true"
            android:textColor="@color/black_color" />

        <ImageView
            android:id="@+id/img_your_earning_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:background="@drawable/white_ripple"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_info" />

    </LinearLayout>

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="gone"
        android:background="@color/hint_color_dark" />

    <LinearLayout
        android:id="@+id/ll_offer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <customviews.SemiboldTextView
            android:id="@+id/tv_percent_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="GET 10% OFF"
            android:textColor="@color/colorPrimaryGradient" />

        <customviews.RegularTextView
            android:id="@+id/booking_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/when_you_book_for_more_than_2_days"
            android:textColor="@color/black_color" />

    </LinearLayout>

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/hint_color_light" />

</LinearLayout>
